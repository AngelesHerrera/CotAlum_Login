<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/riel3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:hint='Riel3"' />

        <EditText
            android:id="@+id/riel2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:hint='Riel 2"' />

        <EditText
            android:id="@+id/jamba2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:hint='Jamba2"' />

        <EditText
            android:id="@+id/jamba3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:hint='Jamba3"' />

        <Button
            android:id="@+id/saveButton2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Guardar" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/getButton2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Recuperar" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/deleteButton2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Eliminar" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/regresarButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Regresar" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/emailTextView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:hint="Email"
            app:layout_constraintBottom_toTopOf="@+id/providerTextView2" />

        <TextView
            android:id="@+id/providerTextView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:hint="ContraseÃ±a"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>